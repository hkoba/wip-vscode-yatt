{
	"name": "yatt-langserver",
	"displayName": "yatt-langserver",
	"description": "Language Server for yatt",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:yatt"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [{
            "id": "yatt",
            "aliases": ["yatt", "yatt"],
            "extensions": [".yatt",".ytmpl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [
            {
                "language": "yatt",
                "scopeName": "text.html.yatt",
                "path": "./syntaxes/yatt.tmLanguage.json"
            },
            {
                "language": "yatt",
                "scopeName": "text.multipart.yatt",
                "path": "./syntaxes/yatt-multipart.tmLanguage.json"
	    }
        ],
		"configuration": {
			"type": "object",
			"title": "yatt langserver configuration",
			"properties": {
				"yattLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}		
	},

	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"vscode-languageclient": "^4.1.4"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
