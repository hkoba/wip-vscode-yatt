{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "yatt",
	"patterns": [
            {
                "name": "meta.declaration.yatt",
                "begin": "^(<!)(yatt:)(\\w+)((?::\\w+)*)",
                "beginCaptures": {
                    "1": { "name": "punctuation.definition.tag.xml" },
                    "2": { "name": "keyword.other.doctype.xml" },
                    "3": { "name": "keyword.other.$1.yatt" }
                },
                "patterns": [
                    {
                        "begin": "--+", "end": "--+", "name": "comment.block.xml"
                    },
                    {
                        "match":"(\\w+)(?::(\\w+))?\\s*=", "captures": {
                            "1": { "name": "entity.other.attribute-name.xml" }
                        }
                    },
                    { "include": "#doublequotedString" },
                    { "include": "#singlequotedString" }
                ],
                "end": ">\n"
            },
	    {
		"include": "text.html.basic"
	    }
	],
	"repository": {
		"doublequotedString": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xml"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xml"
				}
			},
			"name": "string.quoted.double.xml",
			"patterns": [
				{
					"include": "#entity"
				}
			]
		},
		"singlequotedString": {
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.xml"
				}
			},
			"end": "'",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.xml"
				}
			},
			"name": "string.quoted.single.xml",
			"patterns": [
				{
					"include": "#entity"
				}
			]
		},
		"entity": {
			"captures": {
				"1": {
					"name": "punctuation.definition.constant.xml"
				},
				"3": {
					"name": "punctuation.definition.constant.xml"
				}
			},
			"match": "(&)([:a-zA-Z_][:a-zA-Z0-9_.-]*|#[0-9]+|#x[0-9a-fA-F]+)(;)",
			"name": "constant.character.entity.xml"
		}
	},
	"scopeName": "text.html.yatt"
}
